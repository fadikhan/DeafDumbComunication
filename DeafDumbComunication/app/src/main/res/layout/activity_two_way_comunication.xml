<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TwoWayComunication">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="#000000"
        app:titleTextColor="#ffff"

        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/btm_nav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3dp"
        android:background="#000000"

        app:itemIconTint="@android:color/white"
        app:itemTextColor="@drawable/itemcolor"
        app:menu="@menu/nav_items"
        />

    <ImageView
        android:id="@+id/speechToText"
        android:layout_width="181dp"
        android:layout_height="156dp"
        android:layout_above="@+id/btm_nav"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="109dp"
        android:layout_marginLeft="109dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="121dp"
        android:layout_marginRight="121dp"
        android:layout_marginBottom="386dp"
        app:srcCompat="@drawable/speech_to_text" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="211dp"
        android:layout_height="42dp"
        android:layout_above="@+id/btm_nav"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="109dp"
        android:layout_marginLeft="109dp"
        android:layout_marginEnd="91dp"
        android:layout_marginRight="91dp"
        android:layout_marginBottom="339dp"
        android:text="Speech To Text"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/text_to_speech"
        android:layout_width="181dp"
        android:layout_height="156dp"
        android:layout_above="@id/btm_nav"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="109dp"
        android:layout_marginLeft="109dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="121dp"
        android:layout_marginRight="121dp"
        android:layout_marginBottom="182dp"
        app:srcCompat="@drawable/text_to_speech" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="211dp"
        android:layout_height="42dp"
        android:layout_above="@+id/btm_nav"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="108dp"
        android:layout_marginLeft="108dp"
        android:layout_marginEnd="92dp"
        android:layout_marginRight="92dp"
        android:layout_marginBottom="135dp"
        android:text="Text To Speech"
        android:textSize="20dp"
        android:textStyle="bold" />

</RelativeLayout>